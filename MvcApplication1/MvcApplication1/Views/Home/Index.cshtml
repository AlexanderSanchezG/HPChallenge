        </script>


    }
    <form id="saveContactForm" method="post" class="forms">
        <h3>Input the Player Information</h3>
        <p>
            <label for="Name">Player Name:</label>
            <input type="text" name="Name" />
        </p>
        <p>
            <label for="Strategy">Strategy:</label>
            <input type="text" name="Strategy" />
        </p>
        <input type="button" id="saveContact" value="Play" />
        <input type="button" id="EraseContact" value="Erase Data" />
        <p>
            <!--<a href="~/Views/Home/View1">Upload your own Championship here</a>-->
            <label for="FileInput">Upload your own Chanpionship here:</label>
            <input id="FileInput" type="file" size="72" name="File1" runat="server" accept=".txt">
            <input type="button" id="upload" value="Upload" />
