
<header>
    <style type="text/css">
        .list {
            padding-left: 40%;
        }
        .forms {
            padding-left: 32%;
        }

    </style>
    <div class="content-wrapper">
        <div class="float-left">
            <p class="site-title">
                <a href="~/">Rock-Paper-Scissors Game</a>
            </p>
        </div>
    </div>
</header>
<div id="body">
    <h3 class="list">Play With: </h3>
    <ul id="contacts" class="list"></ul>
    @section scripts{
        <script type="text/javascript">
            $(function () {
                $.getJSON('/api/championship/result', function (contactsJsonPayload) {
                    $(contactsJsonPayload).each(function (i, item) {
                        $('#contacts').append('<li>' + item.Name + '</li>');
                    });
                });
            });
            $('#saveContact').click(function () {
                $.post("api/championship/top",
                      $("#saveContactForm").serialize(),
                      function (value) {
                          $('#contacts').append('<li>' + value.Name + '</li>');
                      },
                      "json"
                );
            });
